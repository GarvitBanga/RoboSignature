singularity exec --nv --bind /scratch/gb2762/ --overlay /scratch/gb2762/overlay-25GB-500K.ext3:rw /scratch/gb2762/cuda12.2.2-cudnn8.9.4-devel-ubuntu22.04.3.sif /bin/
