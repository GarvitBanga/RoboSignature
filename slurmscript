
#!/bin/bash
  
#SBATCH --job-name=program
#SBATCH --output=/home/gb2762/ss1.out
#SBATCH --error=/home/gb2762/ss1.err
#SBATCH --time=01:00:00
#SBATCH --account=csci_ga_2271_001-2024fa
